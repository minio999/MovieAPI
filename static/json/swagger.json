{
  "openapi": "3.0.0",
  "info": {
    "description": "Simple Movie Api",
    "version": "1.0.0",
    "title": "Movie API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },



  "tags": [{
    "name": "Products API",
    "description": "Test API"
  }],


  "servers": [{
    "url": "/"
  }],


  "components": {
    "schemas": {
      "MovieList": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "yearMade": {
            "type": "string"
          },
          "director": {
            "type": "string"
          }
        }
      },
      "_Id": {
        "type": "ObjectId",
        "properties": {
          "name": {
            "type": "ObjectId"
          }
        }
      }
    }
  },

    "paths": {
      "/movies": {
        "post": {
          "tags": [
            "Add Movie to API"
          ],
          "summary": "Add Movie",
          "requestBody": {
            "description": "Post New Movie To Database",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieList"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            },
            "500": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            }
          }
        },
        "get": {
          "tags": [
            "Get All Movies from API"
          ],
          "summary": "Get All Movies",

          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            },
            "500": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            }
          }
        }
      },


      "/movies/{ObjectId}": {
        "delete": {
          "tags": [
            "Delete Movie from API"
          ],
          "parameters": [{
            "name": "_id",
            "in": "path",
            "description": "product _id to delete",
            "required": true,
            "type": "ObjectId",
            "schema": {
              "$ref": "#/components/schemas/_Id"
            }
          }],
          "summary": "Delete Movie",

          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            },
            "500": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/MovieList"
              }
            }
          }
        }
      }
    }
  }